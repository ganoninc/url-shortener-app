# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT settings
JWT_SECRET=your-jwt-secret
# Token expiration in milliseconds (example: 15 minutes)
JWT_EXPIRATION_MS=900000
# Refresh token expiration in milliseconds (example: 24 hours)
JWT_REFRESH_TOKEN_EXPIRATION_MS=86400000

# PostgreSQL
POSTGRESQL_USERNAME=your-postgres-username
POSTGRESQL_PASSWORD=your-postgres-password
POSTGRESQL_DB_NAME=your-database-name
DATABASE_JDBC_URL=jdbc:postgresql://postgres:5432/your-database-name

# Frontend origin
FRONTEND_ORIGIN=http://localhost:5173

# CORS allowed origins
CORS_ALLOWED_ORIGINS='["http://localhost:5173", "http://localhost"]'

AUTH_SERVICE_HOST=auth-service
AUTH_SERVICE_PORT=8081
URL_SERVICE_HOST=url-service
URL_SERVICE_PORT=8082
REDIRECTOR_SERVICE_HOST=redirector-service
REDIRECTOR_SERVICE_PORT=8083
ANALYTICS_SERVICE_HOST=analytics-service
ANALYTICS_SERVICE_PORT=8084


# Terraform variable mappings

TF_VAR_jwt_expiration_ms=$JWT_EXPIRATION_MS
TF_VAR_jwt_refresh_token_expiration_ms=$JWT_REFRESH_TOKEN_EXPIRATION_MS

TF_VAR_auth_service_host=$AUTH_SERVICE_HOST
TF_VAR_auth_service_port=$AUTH_SERVICE_PORT
TF_VAR_url_service_host=$URL_SERVICE_HOST
TF_VAR_url_service_port=$URL_SERVICE_PORT
TF_VAR_redirector_service_host=$REDIRECTOR_SERVICE_HOST
TF_VAR_redirector_service_port=$REDIRECTOR_SERVICE_PORT
TF_VAR_analytics_service_host=$ANALYTICS_SERVICE_HOST
TF_VAR_analytics_service_port=$ANALYTICS_SERVICE_PORT

TF_VAR_google_client_id=$GOOGLE_CLIENT_ID
TF_VAR_google_client_secret=$GOOGLE_CLIENT_SECRET